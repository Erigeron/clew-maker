
body
  margin 0px
  display -webkit-flex

*
  box-sizing border-box
  -moz-box-sizing border-box
  // box-shadow 0px 0px 4px hsl(0,0,80)

#logo
  padding 10px 40px

  svg
    box-shadow 0px 0px 4px hsl(0,0,80)

    #path
      stroke red
      fill none
      stroke-width 4px

#ctrl
  div[id^=p]
    width 100px
    color hsl(0,0,70)
    font-size 13px

    &:hover
      box-shadow 0px 0px 4px gray

  .sight
    background hsl(240,90,90)

.x, .y
  color hsl(240,50,40)
  margin-left 20px